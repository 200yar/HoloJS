<Page x:Class="HoloJs.Spin.HelpPages.HelpIntro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HoloJs.Spin.HelpPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelpIntro">

    <Grid>
        <StackPanel>
            <Label Content="Create VR or AR experiences using JavaScript:" FontSize="16" FontWeight="DemiBold"/>
            <Label Content="1. Click 'New'" FontSize="14" />
            <Label Content="2. Pick a name, save location and WebGL framework" FontSize="14"/>
            <Label Content="3. Click 'Edit in Visual Studio Code'" FontSize="14"/>
            <Label Content="4. Change the JavaScript code to do what you want" FontSize="14"/>
            <Label Content="5. Hit F5 in VS code and experience it in a Windows Mixed Reality headset" FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>
